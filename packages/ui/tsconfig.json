{
  "extends": ["@soli/tsconfig/react.json"],
  "compilerOptions": {
    "declaration": false,
    "tsBuildInfoFile": ".tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".storybook/**/*", "**/*.cjs"],
  "exclude": ["dist", "node_modules", "storybook-static"]
}

{
  "name": "solistack",
  "private": true,
  "type": "module",
  "bin": "",
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "bun run rm -rf .turbo node_modules",
    "dev": "turbo dev",
    "format": "bun format:write",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint": "turbo lint",
    "migrate": "cd packages/db && npx drizzle-kit generate && npx drizzle-kit push",
    "turbo": "turbo dev"
  },
  "dependencies": {
    "@types/bun": "1.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@solistack/ts-config": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "prettier": "3.4.2",
    "prettier-plugin-packagejson": "2.5.8",
    "prettier-plugin-tailwindcss": "0.6.11",
    "turbo": "2.4.0",
    "typescript": "5.7.3",
    "ultracite": "4.1.18"
  },
  "packageManager": "bun@1.1.27",
  "engines": {
    "node": ">=18"
  }
}

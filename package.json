{
  "name": "soli",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "rimraf --glob **/node_modules **/dist **/.turbo **/.next **/.astro **/.eslintcache **/storybook-static pnpm-lock.yaml **/.tsbuildinfo **/playwright-report **/test-results",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . --cache --max-warnings 0",
    "ui:add": "pnpm --filter @soli/ui ui:add"
  },
  "devDependencies": {
    "@soli/eslint-config": "workspace:*",
    "@soli/tsconfig": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^8.56.10",
    "eslint": "8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.5.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rimraf": "^5.0.7",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  }
}

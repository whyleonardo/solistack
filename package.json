{
  "name": "solistack",
  "private": true,
  "type": "module",
  "bin": "",
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "bun format:write",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint": "turbo lint",
    "migrate": "cd packages/db && npx drizzle-kit generate && npx drizzle-kit push",
    "setup": "bun ./scripts/init.js"
  },
  "dependencies": {
    "@types/bun": "1.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@solistack/ts-config": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.3",
    "prettier-plugin-tailwindcss": "0.6.8",
    "turbo": "2.2.3",
    "typescript": "5.6.3",
    "ultracite": "4.1.6"
  },
  "packageManager": "bun@1.1.27",
  "engines": {
    "node": ">=18"
  }
}

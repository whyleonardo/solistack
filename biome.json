{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "suspicious": {
        "useAwait": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noNamespaceImport": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      }
    }
  }
}
